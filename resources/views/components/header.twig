{% macro Header(title, description) %}
<!-- Header -->
<header class="bg-dark py-5"
  style="background: url('/assets/images/hidden-code.png') no-repeat center center fixed; background-size: cover;">
  <div class="container px-4 px-lg-5 my-5">
    <div class="text-center text-white">
      <h1 class="display-4 fw-bolder text-white">{{ title }}</h1>
      <p class="lead fw-normal text-white-50 mb-0">{{ description }}</p>
    </div>
  </div>
</header>
<!--// Header -->
{% endmacro %}