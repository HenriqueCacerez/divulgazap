{% extends 'layouts/base.twig' %}

{% block title %} Detalhes do Grupo | {{APP_NAME}} {% endblock %}

{% block content %}
<main class="container col-md-9 col-sm-12 mt-5 mb-5">
  <div class="row">
    <h1 class="text-center mb-5">{{ group.name }}</h1>
    <div class="col-md-6 mb-5">
      <div class="card">
        <img src="/assets/images/groups/{{ group.image }}" class="card-img-top object-fit-cover group-img" width="100%" height="300px" />
        <div class="card-body">
          <h5 class="card-title fw-bold">{{ group.name }}</h5>
          <p class="card-text">{{ group.description|raw }}</p>
          <div class="text-center d-sm-inline d-none">
            <a href="https://chat.whatsapp.com/{{ group.link }}" target="_blank" class="btn btn-success btn-group-join w-100">Entrar no Grupo</a>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card card-body"> 
        <p class="card-text">Este grupo foi enviado em <strong>{{ group.created_at | date("d/m/Y") }}</strong>.</p>
        <hr />
        <div class="mt-2">
          <a href="/grupo/enviar" class="text-decoration-none">Envie o seu grupo</a> tamb√©m e comece a receber novos integrantes!
        </div>
      </div>
    </div>
  </div>
</main>
{% endblock %}